{% extends 'blog/base.html.twig' %} {% block content %}

<!--ARTICLE-->

<section class="uk-section uk-article">

    <div class="uk-container">
        <div class="uk-grid" data-ukgrid>
            <div class="uk-width-2-3@m">

                <div class="uk-container uk-container-small">
                    <h3 class="uk-text-bold uk-h1 uk-margin-remove-adjacent uk-margin-remove-top ">{{ program.title}}</h3>
                    <p class="uk-article-meta">Written on {{ program.createdAt ? program.createdAt|date('F jS \\,\\ Y') : '' }} | <span data-uk-icon="icon: future"></span> Takes {{ (program.content | length / 200) | round}}min reading.</p>
                </div>

                <!-- large image -->
                <div class="uk-container uk-section">
                    <div class="uk-inline-clip uk-transition-toggle" tabindex="0">
                        <img class="uk-transition-scale-up uk-transition-opaque" src="{{ vich_uploader_asset(program.cover ,'imageFile') }} " alt="">

                    </div>
                </div>

                <!-- /large image -->
                <!-- text -->
                <div class="uk-container uk-container-small example" uk-scrollspy="target: > div; cls: uk-animation-fade; delay: 500">

                    <div class="uk-card uk-card-hover uk-card-body">

                        <h3 class="c-title">{{ program.title}}</h3>
                        <p class="uk-article-meta">{{ program.SubTitle}}</p>

                        {{ program.content |striptags('<b>,<br>,<div>,<ul>,<li>')|raw}}


                    </div>



                    <a  target="_blank" style="width:30%" href="{{ vich_uploader_asset(program ,'attachementFile') }} "   class="uk-button uk-button-secondary  uk-button-large tw-hover btn-subscribe uk-align-center"><span class="tw-hover-inner"><span>DOSSIER DE PRESSE</span><i class="ion-ios-arrow-down"></i></span></a>


                    <!-- gallery -->
                    <div class="uk-container uk-container-small uk-margin-medium">
                        <div class="uk-grid uk-grid-medium uk-child-width-1-2 uk-child-width-1-3@s" data-uk-grid data-uk-lightbox>
                           
                           
                            {% for image in program.galleries %}
                           
                            <div>
                                <figure>
                                    <a data-caption="Image Caption" title="Image Caption" href="{{ vich_uploader_asset(image ,'imageFile') }} ">
                                        <img data-src="{{ vich_uploader_asset(image ,'imageFile') }} " width="300" height="200" alt="Image Caption" data-uk-img>
                                    </a>
                                    <figcaption class="uk-text-small uk-text-muted uk-text-center uk-padding-small uk-visible@s">Aenean vitae est</figcaption>
                                </figure>
                            </div>

                             {% endfor %}


                        </div>
                    </div>
                    <!-- /gallery -->

                </div>

            </div>
            <div class="uk-width-1-3@m">
                <div class="uk-card uk-card-secondary uk-card-hover uk-card-body uk-animation-slide-right uk-margin-small-top">

                    <span class="uk-text-emphasis underanime">Dates de représentation</span>
                    <ul class="uk-list">
                    {% for performance in program.performances %}

                        <li><a href=""> {{ performance.date|date("D \\ \\ m/d/Y" , "Europe/Paris")|trans   }} <small>à  {{ performance.time | date(" H:i")}} {{ performance.place }}</small></a></li>


                    {% endfor %}
                         

                    </ul>

                    <button class="uk-button uk-button-secondary  uk-button-large tw-hover   uk-align-center"><span class="tw-hover-inner"><span>RESERVER</span><i class="ion-ios-arrow-thin-right"></i></span></button>
                </div>

            </div>
        </div>


    </div>
    <!-- text -->




</section>

<!-- /ARTICLE-->


 {% endblock %}