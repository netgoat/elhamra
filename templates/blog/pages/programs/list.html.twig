{% extends 'blog/base.html.twig' %} {% block content %}

<div class="uk-section uk-section-default">
    <div class="uk-container">

        <div class="uk-panel uk-align-center uk-margin-bottom">

            {% for categoy in categories %}
            <a href="#" class="uk-button uk-button-default  btn6 tw-hover">
                <span class="tw-hover-inner"><span class="uk-text-center" >{{categoy.name}}</span><i class="ion-ios-arrow-thin-right"></i></span>
            </a>

            {% endfor %}


        </div>





        </ul>

        <div class="uk-child-width-1-3@s uk-grid-match" uk-grid>
            {% for program in programs %}




            <div>
                <div class="uk-card uk-card-hover">
                    <div class="uk-card-media-top">
                        <img class="card-media" src="{{ vich_uploader_asset(program.cover ,'imageFile')  }}" alt="" />
                    </div>
                    <div class="uk-card-body">
                        <h3 class="uk-card-title">{{program.title |title }}</h3>
                        <p>{{program.content[:230]| striptags }}... </p>

                    </div>
                    <div class="uk-card-footer">
                        <a href="{{ path('program_details',{'slug':program.slug}) }}" title="Read More " class="uk-button uk-button-default  btn6 tw-hover"><span class="tw-hover-inner"><span>PLUS DE DETAILS</span><i class="ion-ios-arrow-thin-right"></i></span></a>
                    </div>
                </div>
            </div>

            {% endfor %} {{ knp_pagination_render(programs) }}


        </div>
    </div>
</div>
